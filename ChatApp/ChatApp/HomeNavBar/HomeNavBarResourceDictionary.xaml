<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:bool="clr-namespace:ChatApp"
                    xmlns:converter="clr-namespace:ChatApp.Converter">
    <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <Style TargetType="Label" x:Key="Label">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="../Assets/#469 icons fonts"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#3f5975"/>
    </Style>
    <Style TargetType="RadioButton" x:Key="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border>
                        <Grid Background="Transparent">
                            <ContentPresenter></ContentPresenter>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0 0 0 30"/>
    </Style>
</ResourceDictionary>